<Window x:Class="phonebook_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:phonebook_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="145.171">
    <Grid Margin="0,0,2,0">
        <Button x:Name="searchBtn" Content="Search" HorizontalAlignment="Left" Margin="32,84,0,0" VerticalAlignment="Top" Width="75" Click="searchBtn_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" TextWrapping="Wrap" Text="Company PhoneBook" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="addBtn" Content="Add Contact" HorizontalAlignment="Left" Margin="32,120,0,0" VerticalAlignment="Top" Width="75" Click="addBtn_Click"/>
        <Button x:Name="delBtn" Content="Delete/Edit" HorizontalAlignment="Left" Margin="32,158,0,0" VerticalAlignment="Top" Width="75" Click="editBtn_Click"/>

    </Grid>
</Window>
