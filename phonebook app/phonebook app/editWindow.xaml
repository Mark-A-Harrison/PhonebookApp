<Window x:Class="phonebook_app.editWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:phonebook_app"
        mc:Ignorable="d"
        Title="editWindow" Height="323.139" Width="529.239">
    <Grid Margin="0,0,-8,0">
        <Label x:Name="label" Content="Delete/Edit Contact - Populate the table to see what you're editing" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGrid1" HorizontalAlignment="Left" Height="238" Margin="10,41,0,0" VerticalAlignment="Top" Width="368"/>
        <Button x:Name="popBtn" Content="Populate" HorizontalAlignment="Left" Margin="399,95,0,0" VerticalAlignment="Top" Width="92" Click="popBtn_Click"/>
        <Button x:Name="delBtn" Content="Delete Contact" HorizontalAlignment="Left" Margin="399,149,0,0" VerticalAlignment="Top" Width="92" Click="delBtn_Click"/>
        <Button x:Name="editBtn" Content="Edit Contact" HorizontalAlignment="Left" Margin="399,122,0,0" VerticalAlignment="Top" Width="92" Click="editBtn_Click"/>

    </Grid>
</Window>
